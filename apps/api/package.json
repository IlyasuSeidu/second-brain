{
  "name": "@second-brain/api",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "pnpm --filter @second-brain/shared build && pnpm prisma:generate && tsc -p tsconfig.build.json",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "postinstall": "prisma generate",
    "prisma": "prisma",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "ts-node --transpile-only prisma/seed.ts",
    "start": "node dist/index.js",
    "test": "jest --config jest.config.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "@second-brain/shared": "workspace:*",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "openai": "^5.12.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@second-brain/config": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "prisma": "^6.3.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
